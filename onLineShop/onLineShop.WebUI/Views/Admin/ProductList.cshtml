@model IEnumerable<onLineShop.Model.Product>

<br />
<p>
    @Html.ActionLink("Create New", "CreateProduct", null, new { @class = "btn btn-lg btn-info"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImageUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new {id = item.ProductId}) 
        </td>
    </tr>
}

</table>
