@model IEnumerable<onLineShop.Model.CartItem>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img style="width: 15%" src="/images/@item.Product.ImageUrl" alt="@item.Product.Description"/>
            @Html.DisplayFor(modelItem => item.Product.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteEntryFromShoppingCart", new { id=item.ShoppingCartItemId }) 
        </td>
    </tr>
}

</table>
